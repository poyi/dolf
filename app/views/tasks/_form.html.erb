<%= form_for(@task, :html => { :class => "footer-create-input"}, :remote => true) do |f| %>

  <div class="field" id="task-create-input">
    <%= f.text_field :detail, :placeholder => "Enter new tasks here" %>
  </div>
  <div class="actions" id="task-create-button">
    <%= f.submit %>
  </div>
<% end %>