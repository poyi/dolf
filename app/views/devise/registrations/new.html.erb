<h2 style="margin-bottom: 20px;">Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div>
  <%= f.email_field :email, :placeholder => "Enter email address here" %></div>

  <div>
  <%= f.password_field :password, :placeholder => "Enter password" %></div>

  <div>
  <%= f.password_field :password_confirmation, :placeholder => "Enter password again" %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "links" %>
